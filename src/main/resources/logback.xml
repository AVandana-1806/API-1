<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<property name="REQUEST_LOGS" value="${LOG_DIR}" />
	<appender name="FILE-THREAD" class="ch.qos.logback.classic.sift.SiftingAppender">

		<!-- This is MDC value -->
		<!-- We will assign a value to 'userLog' via Java code -->
		<discriminator>
			<key>userLog</key>
			<defaultValue>main</defaultValue>
		</discriminator>

		<sift>
		  <!-- A standard RollingFileAppender, the log file is based on 'userLog' at runtime  -->
		  <appender name="FILE-${userLog}"
			class="ch.qos.logback.core.rolling.RollingFileAppender">
			<file>${REQUEST_LOGS}/${userLog}.log</file>

			<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
				<Pattern>
					%d{yyyy-MM-dd HH:mm:ss} %mdc [%thread] %level %logger{35} - %msg%n
				</Pattern>
			</encoder>

			<rollingPolicy
				class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
				<FileNamePattern>${REQUEST_LOGS}/${userLog}.%i.log.zip</FileNamePattern>
				<MinIndex>1</MinIndex>
				<MaxIndex>10</MaxIndex>
			</rollingPolicy>

			<triggeringPolicy
				class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
				<MaxFileSize>20MB</MaxFileSize>
			</triggeringPolicy>

		  </appender>

		</sift>
	</appender>

	<logger name="gov.ca.cwds" level="debug" additivity="false">
		<appender-ref ref="FILE-THREAD" />
		<appender-ref ref="STDOUT" />
	</logger>
	
	<root level="warn">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>
