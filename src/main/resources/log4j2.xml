<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
			<!-- <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - 
				%msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/> -->
		</Console>
		<File name="TEMP" fileName="./dave_log4j2.log">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</File>

		<Async name="ASYNC">
			<AppenderRef ref="TEMP" />
		</Async>
	</Appenders>
	
	<Loggers>
		<Root level="error">
			<AppenderRef ref="ASYNC" />
		</Root>
		<logger name="org.aae" level="all" additivity="false">
			<AppenderRef ref="ASYNC" level="all" />
			<AppenderRef ref="CONSOLE" level="debug" />
		</logger>
		<logger name="org.apache.http.wire" level="warn" additivity="false">
			<AppenderRef ref="CONSOLE" level="ERROR" />
		</logger>
		
		<logger name="o.a.h.i.c" level="warn" additivity="false">
			<AppenderRef ref="CONSOLE" level="ERROR" />
		</logger>
		<logger name="org.apache" level="warn" additivity="false">
			<AppenderRef ref="CONSOLE" level="ERROR" />
		</logger>
	</Loggers>
	
</Configuration>